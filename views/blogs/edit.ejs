<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="card Form">
        <h3 class="text-center">Edit Page "<%= blog.title %>"</h3>
            <form action="/blogs/<%=  blog._id  %>?_method=PUT" method="POST">
            
                <div class="form-group">
                    <h5>Title</h5>
                    <input type="text" class="form-control" name="blogs[title]" value="<%=  blog.title  %>">
                </div>
                <div class="form-group">
                    <h5>Image URL</h5>
                    <input type="text" name="blogs[image]" class="form-control" value="<%=  blog.image  %>">
                </div>
                <div class="form-group">
                    <h5>Your Views...</h5> 
                    <textarea name="blogs[description]" rows="5" class="form-control"><%=  blog.description  %></textarea>
                </div>
                
                <button type="submit" class="btn btn-success">Submit</button>
                
                <div id="goBack">
                    <a href="/blogs/<%= blog._id %>">Go back</a>
                </div>
                    

                
                
            </form>
    </div>    
        
</div>

<%- include("../partials/footer.ejs") %>
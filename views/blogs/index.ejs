<%- include("../partials/header.ejs") %>
    <div class="jumbotron indexJumbotron jumbotron-fluid">
        <h1 class="display-4">Bloggers</h1>
        <p class="lead">Earning from a blog is not something that happens overnight. It takes a sound strategy along with a high dose of perseverance.</p>
        <hr>
        <p>Lets get Started!!!</p>
        <a href="/blogs/new" class="btn btn-lg btn-warning">Add new Blog</a>

    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-12 col-lg-9">
            <% if(blogs.length>0){ %>    
                <div class="blogs1">
                    <%   for(var i = 0;i<blogs.length;i++){   %>
                        <div class="row">
                            <div class="col-md-4">
                                <img src="<%= blogs[i].image %>" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <h5><%=  blogs[i].title   %></h5>
                        
                                <p>
                                    <%= blogs[i].description.substring(0,100) %>...
                                </p>
                                <a href="/blogs/<%= blogs[i]._id %>">More info</a>
                            </div>
                        </div>
                        <% if(i!=blogs.length-1){ %>
                        <hr id="indexhr">
                        <% } %>
                    <% } %>
                </div>
            <% } %>     
        </div>    
    </div>

        
  
<%- include("../partials/footer.ejs") %>

<%- include("../partials/header.ejs") %>
<div class="container">
    <div id="commentEdit">
        <h3>Edit "<%= comment.text  %>" </h3>
            
            <form action="/blogs/<%= blog._id %>/comments/<%= comment._id  %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="comments[text]" class="form-control" value="<%= comment.text %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button><br>
                <a href="/blogs/<%= blog._id %>" id="goBack">Go back</a>
            </form>
    </div>
    
</div>    

